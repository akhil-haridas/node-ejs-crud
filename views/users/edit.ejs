<%- include('../layouts/header.ejs') %>

<section class="vh-150 gradient-custom py-2"
    style="background:url(https://i.pinimg.com/originals/e0/a6/67/e0a667f06f7c1f8e7facfc79d455502f.gif); background-size: cover;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5" style="backdrop-filter: blur(3px);">
                <div class="card bg-transparent text-white" style="border-radius: 3rem;">
                    <div class="card-body py-5 text-center">
                        <form class="mb-md-5 mt-md-4 pb-5" action="" method="post">
                            <h3 class="fw-bold mb-2 text-uppercase">E D I T</h3>
                            <p class="text-white-50 mb-3">Edit your name ,email or mobile!</p>
                            <input type="hidden" name="user_id" value="<%= user._id %>">
                            <div class="form-outline form-white mb-4">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control form-control-lg bg-transparent text-white" name="name" value="<%= user.name %>" placeholder="Edit name" required />
                            </div>
                            <div class="form-outline form-white mb-4">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control form-control-lg bg-transparent text-white" name="email" value="<%= user.email %>" placeholder="Edit email" required/>
                            </div>
                            <div class="form-outline form-white mb-4">
                                <label class="form-label">Mobile</label>
                                <input type="text"
                                    class="form-control form-control-lg bg-transparent text-white" name="mobile" value="<%= user.mobile %>" placeholder="Edit Mobile Number" required/>
                            </div>
                            <button class="btn btn-outline-light btn-lg px-5 mt-5" type="submit"
                                value="Update Profile">Update</button>
                                <div class="d-flex justify-content-center">
                                    <a href="/admin/dashboard"><button class="btn btn-light mt-5 bg-transparent" style="color: white;" style="border-radius: 30px;">Go
                                            Back</button></a>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../layouts/footer.ejs') %>